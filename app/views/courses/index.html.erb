<%= render "links" %>
<% @courses.each do |course| %>
    <p>Name: <%= course.name %></p>
    <p>Participants: <%= course.participants %></p>
        <% if course.complete == true %>
           <p>Completed: yes</p>
        <% else %>
            <p>Completed: no</p>
        <% end %>
    <p>Created: <%= course.created_at %></p> 
    <div class = "buttons">
    <%= button_to "Update #{course.name}", "/courses/#{course.id}/edit", method: :get %>
    <br>
    <%= button_to "Delete #{course.name}", "/courses/#{course.id}", method: :delete %>
    <br>
    <%= button_to "View #{course.name} Lessons", "/courses/#{course.id}/lessons", method: :get %>
    </div>
<% end %>