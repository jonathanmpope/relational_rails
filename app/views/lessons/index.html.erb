<%= form_with url: '/lessons', method: :get, local: true do |form|%>
    <%= form.label "Search for a lesson:" %>
    <%= form.text_field :search, placeholder: "Lesson name", required: true %>
     <%= form.submit "Search" %>
<% end %>
<% @lessons.each do |lesson| %>
    <h3>Name: <%= link_to "#{lesson.name}", "/lessons/#{lesson.id}" %></h3>
    <h3>Format: <%= lesson.format %></h3>
    <h3>Questions: <%= lesson.questions %></h3>
        <% if lesson.complete == true %>
            <h3>Completed: yes</h3>
        <% else %>
            <h3>Completed: no</h3>
        <% end %>
    <%= button_to "Update #{lesson.name}", "/lessons/#{lesson.id}/edit", method: :get %>
    <%= button_to "Delete #{lesson.name}", "/lessons/#{lesson.id}", method: :delete %>
<% end %>